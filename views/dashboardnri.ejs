<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bank Account Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        
        h1 {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .account-info {
            border-bottom: 1px solid #ddd;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }
        
        .account-info h2 {
            margin-top: 0;
        }
        
        .transaction-history {
            margin-top: 20px;
            height: 200px;
            overflow-y: scroll;
        }
        
        .transaction-history table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .transaction-history th,
        .transaction-history td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        
        .transaction-history th {
            background-color: #f4f4f4;
        }
    </style>
</head>

<body>

    <div class="container">
        <h1>Bank Account Dashboard</h1>

        <div class="account-info">
            <h2>Account Information</h2>
            <p><strong>Name:</strong>
                <%= username %>
            </p>
            <p><strong>Account Number:</strong>
                <%=  accno %>
            </p>
            <p><strong>Balance:</strong>
                <%=  bal %>
            </p>
            <p><strong>Nationality:</strong>
                <%=  type %>
            </p>
            <p><strong>Interest Rate:</strong> 9.6%
            </p>
            <p> <strong>1 year Interest Amount :</strong>
                <span id="intrate"></span>
            </p>
        </div>
        <h2>Transaction History</h2>
        <div class="transaction-history">

            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% tran.forEach(item => { %>
                        <tr>
                            <td>
                                <%= item.date.toISOString().split('T')[0] %>
                            </td>
                            <td>
                                <%= item.status %>
                            </td>
                            <td>
                                <%= item.amt %>
                            </td>
                        </tr>
                        <% }); %>

                </tbody>
            </table>
        </div>
        <h2>Money Deposit</h2>
        <form method="post" action="/deposit">
            <label for="accountNumber">Account Number:</label>
            <input type="text" id="accountNumber" name="accountNumber" required>
            <br>
            <label for="amount">Amount:</label>
            <input type="text" id="amount" name="amount" required>
            <br>
            <label for="fromCurrency">From Currency:</label>
            <select id="fromCurrency" name="fromCurrency">
      <!-- Add your currency options here -->
      <option value="USD">USD</option>
      <option value="EUR">EUR</option>
      <option value="JPY">JPY</option>
      <option value="CAD">CAD</option>
</select>


            <label for="convertedAmount">Converted Amount (INR):</label>
            <input type="text" id="convertedAmount" name="convertedAmount" value="0.00" readonly>
            <button type="button" onclick="convertCurrency()">Convert</button>
            <br>
            <label for="fullName">Full Name:</label>
            <input type="text" id="fullName" name="fullName" required>
            <br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <br>
            <label for="ifsc">IFSC Code:</label>
            <input type="ifsc" id="ifsc" name="ifsc" required>
            <br>
            <button type="submit" onclick="submitForm()">Deposit Money</button>
            <br>

        </form>




        <h2>Money Withdraw</h2>
        <form method="post" action="/withdraw">
            <label for="accountNumber">Account Number:</label>
            <input type="text" id="accountNumber" name="accountNumber" required>
            <br>
            <label for="amount">Amount:</label>
            <input type="text" id="amount" name="amount" required>
            <br>

            <label for="fullName">Full Name:</label>
            <input type="text" id="fullName" name="fullName" required>
            <br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <br>
            <label for="ifsc">IFSC Code:</label>
            <input type="ifsc" id="ifsc" name="ifsc" required>
            <br>
            <button type="submit">Withdraw Money</button>
            <br>

        </form>
    </div>
    <script>
        function convertCurrency() {
            const amount = document.getElementById('amount').value;
            const fromCurrency = document.getElementById('fromCurrency').value;
            const convertedAmount = document.getElementById('convertedAmount');

            if (fromCurrency == "USD") {
                convertedAmount.value = parseInt(amount) * 82.91;
            } else if (fromCurrency == "EUR") {
                convertedAmount.value = parseInt(amount) * 89.96;
            } else if (fromCurrency == "JPY") {
                convertedAmount.value = parseInt(amount) * 0.55;
            } else if (fromCurrency == "CAD") {
                convertedAmount.value = parseInt(amount) * 61.31;
            }




        }
        const intrate = document.getElementById("intrate");
        let amt = parseInt('<%=  bal %>');
        intrate.innerHTML = ((amt * 9.6) / 100).toFixed(2);
    </script>

</body>

</html>